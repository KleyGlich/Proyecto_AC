@model IEnumerable<Gestor_Notas.Models.DetalleCurso>

@{
    ViewData["Title"] = "Notas";
}

<h1><center>Notas</center></h1>

@if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Administrador")
{
    <div class="orden">
        <p>
            <a asp-action="Create"><img src="~/img/agregar-documento.png" width="50" height="50" /></a>
            <h3>Crear un Nuevo Campo de Notas</h3>
        </p>
    </div>
}
@if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Catedratico")
{
    <div class="orden">
        <p>
            <a asp-action="Create"><img src="~/img/agregar-documento.png" width="50" height="50" /></a>
            <h3>Crear un Nuevo Campo de Notas</h3>
        </p>
    </div>
}
<br />
<hr />
<div style="overflow-x:auto;">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrimerParcial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegundoParcial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actividades)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProyectoFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Extraordinario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngresoNota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroActa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstudianteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCursoNavigation)
            </th>
                <th><center></center></th>
                <th><center></center></th>
                <th><center></center></th>
        </tr>      
    </thead>
    </div>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrimerParcial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoParcial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actividades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProyectoFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Extraordinario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngresoNota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinalizacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroActa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstudianteNavigation.PrimerNombre)
                @Html.DisplayFor(modelItem => item.EstudianteNavigation.SegundoNombre)
                @Html.DisplayFor(modelItem => item.EstudianteNavigation.TercerNombre)
                @Html.DisplayFor(modelItem => item.EstudianteNavigation.PrimerApellido)
                @Html.DisplayFor(modelItem => item.EstudianteNavigation.SegundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCursoNavigation.Curso1)
            </td>
            
            <td>
                <center>
                    @if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Administrador")
                    {
                    <a asp-action="Edit" asp-route-id="@item.IdDetalleCurso"><img src="~/img/editar.png" width="40" height="40" /> </a>
                    }
                    else if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Catedratico")
                    {
                    <a asp-action="Edit" asp-route-id="@item.IdDetalleCurso"><img src="~/img/editar.png" width="40" height="40" /> </a>
                    }
                </center>
            <td>
                <center>
                    @if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Administrador")
                        {
                            <a asp-action="Details" asp-route-id="@item.IdDetalleCurso"><img src="~/img/votacion.png" width="40" height="40" /> </a>
                        }
                        else if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Catedratico")
                        {
                            <a asp-action="Details" asp-route-id="@item.IdDetalleCurso"><img src="~/img/votacion.png" width="40" height="40" /> </a>
                        }
                    </center>
            </td>
            <td>
                <center>
                        @if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Administrador")
                        {
                            <a asp-action="Delete" asp-route-id="@item.IdDetalleCurso"><img src="~/img/basura.png" width="40" height="40" /> </a>
                        }
                        else if (User.Claims.ElementAt(1).ToString().Split(':')[1].ToString().Replace(" ", "") == "Catedratico")
                        {
                        <a asp-action="Delete" asp-route-id="@item.IdDetalleCurso"><img src="~/img/basura.png" width="40" height="40" /> </a>
                        }
                    </center>
            </td>
        </tr>
}
