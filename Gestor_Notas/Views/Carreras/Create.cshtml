@model Gestor_Notas.Models.Carrera

@{
    ViewData["Title"] = "Crear Carrera";
}
<div class="orden">
    <a asp-action="Index"><img src="~/img/flecha-izquierda.png" width="50" height="50" /></a>
</div>

<h1><center>Crear Nueva Carrera </center></h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Carrera1" class="control-label"></label>
                <input asp-for="Carrera1" class="form-control" />
                <span asp-validation-for="Carrera1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSede" class="control-label"></label>
                <select asp-for="IdSede" class ="form-control" asp-items="ViewBag.IdSede"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
